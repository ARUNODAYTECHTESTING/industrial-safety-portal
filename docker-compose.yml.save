version: '3.8'
services:
  web:
      
    build: 
      context: ./
      dockerfile: Dockerfile
    command: gunicorn config.wsgi:application --bind 0.0.0.0:8005
    volumes:
      - ./:/app/
      - static_volume:/app/static
      - media_volume:/app/media
    ports:
      - 8005:8005
    env_file:
      - .env
    depends_on:
      - db
  
  db:
    image: postgres:15
    volumes:
      - postgres_data:/var/lib/postgresql/data/
    env_file:
      - .env
  nginx:
    build: ./nginx
    volumes:
      - static_volume:/app/static
      - media_volume:/app/media
    ports:
      - 80:80
    depends_on:
      - web
  
volumes:
  postgres_data:
  static_volume:
  media_volume:
